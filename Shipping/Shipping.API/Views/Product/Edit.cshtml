@model ApplicationCore.Entities.Product

<h1>Edit Customer</h1>
<form asp-action="Edit" asp-controller="Customer">
    <div>
        <input type="hidden" value ="@Model.Id" />
        <label for="">Name</label>
        <input type="text" name="Name" value="@Model.ProductName" class="form-control"/>
    </div>
    <div>
        <label>Address</label>
        <input type="text" name="Address" value="@Model.Description" class="form-control"/>
    </div>
    <div>
        <label>Payment</label>
        <input type="text" name="Payment" value="@Model.Price" class="form-control"/>
    </div>
    <button type="submit" class="btn-primary btn">Update</button>
</form>